<view class="page">
    <view class="page__bd">
        <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">错误提示</view>
        <view class="weui-cells__title">商户名称</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="输入您的商户名称"/>
                </view>
            </view>
        </view>
        <view class="weui-cells__title">位置信息</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_select">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">选择地区</view>
                </view>
                <view class="weui-cell__bd">
                    <picker bindchange="bindCountryChange" value="{{countryIndex}}" range="{{countries}}">
                        <view class="weui-select weui-select_in-select-after">{{countries[countryIndex]}}</view>
                    </picker>
                </view>
            </view>
            <view class="weui-cell">
                <view class="weui-label">详细地址</view>
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" placeholder="街道门牌信息" style="height: 3.3em" />
                    <view class="weui-textarea-counter">0/200</view>
                </view>
            </view>
        </view>

        <view class="weui-cells__title">经营范围</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" placeholder="您主要都经营那些商品和服务" style="height: 3.3em" />
                    <view class="weui-textarea-counter">0/200</view>
                </view>
            </view>
        </view>
        <view class="weui-cells__title">营业执照</view>
         <view class="weui-cells imagebox">
            <image class="image-box-item" src="http://77wdm6.com1.z0.glb.clouddn.com/cov.jpeg"></image>
            <view class="imagebox-add">
                <image mode="scaleToFill" class="imagebox-add-icon" src="http://77wdm6.com1.z0.glb.clouddn.com/add.svg"></image>
            </view>
         </view>

        <view class="weui-btn-area">
            <button class="weui-btn" type="primary" bindtap="navToVerify">确定</button>
        </view>
    </view>
</view>
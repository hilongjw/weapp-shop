@import "../../common/index.wxss";
.user-view {
    padding: 20rpx 0;
    background: #EFEFF4;
    min-height: 100%;
    box-sizing: border-box;
}
.user-profile {
    display: flex;
    background: #FFFFFF;
    padding: 24rpx 30rpx;
    margin-bottom: 40rpx;
}
.user-profile-avatar {
    width: 128rpx;
    height: 128rpx;
    margin-right: 25rpx;
    border-radius: 6rpx;
}
.user-profile-name {
    font-family: PingFangSC-Regular;
    font-size: 36rpx;
    color: #000000;
    letter-spacing: 0;
    line-height: 128rpx;
}

.user-location-list {
    background: #FFFFFF;
}
.user-location-item {
    position: relative;
    padding: 30rpx 96rpx 30rpx 30rpx;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #000000;
    letter-spacing: 0;
    border-bottom: 1px solid #E5E5E5;
}
.user-location-add {
    padding: 37rpx 30rpx;
    background: #fff;
    display: flex;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #000000;
    letter-spacing: 0;
    line-height: 36rpx;
}
.user-location-add-icon {
    height: 36rpx;
    width: 36rpx;
    margin-right: 30rpx;
    vertical-align: sub;
}